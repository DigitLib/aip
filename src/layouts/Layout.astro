---
interface Props { title: string; activeNav?: string }
const { title, activeNav = '' } = Astro.props;
---
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content="AI Infrastructure Planning Tool – GPU VRAM calculator, Vector DB planner, Base Machine configurator" />
    <link rel="icon" href={`${import.meta.env.BASE_URL}/favicon.svg`} />
    <title>{title} · AI Infra Planner</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
</head>
<body>
<div class="page-grid">
    <header>
        <a href={`${import.meta.env.BASE_URL}/`} class="logo">⚡ AI Infra Planner</a>
        <nav>
            <a href={`${import.meta.env.BASE_URL}/gpu-calculator`} class:list={[{ active: activeNav==='gpu' }]}>GPU Calculator</a>
            <a href={`${import.meta.env.BASE_URL}/vector-db`}      class:list={[{ active: activeNav==='vdb' }]}>Vector DB</a>
            <a href={`${import.meta.env.BASE_URL}/base-machine`}   class:list={[{ active: activeNav==='base' }]}>Base Machine</a>
        </nav>
    </header>

    <main><slot /></main>

    <footer>
        &copy; {new Date().getFullYear()} AI Infra Planner &mdash; open-source planning toolkit by Phi2AI
        <div style="margin-top: 0.8rem;">
            <a href="https://github.com/digitlib/aip" target="_blank" rel="noopener noreferrer" style="display: inline-flex; align-items: center; gap: 0.4rem; color: var(--muted); font-size: 0.85rem; text-decoration: none; transition: color 0.2s;">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" stroke="none">
